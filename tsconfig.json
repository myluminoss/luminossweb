{
  "compilerOptions": {
    "baseUrl": ".",
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "allowSyntheticDefaultImports": true, // 
    "resolveJsonModule": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@assets/*": [
        "src/assets/*"
      ]
    },
    "strict": false
  },
  "include": [
    "src/types/*.ts", // 
    "src/global.d.ts",
    "src/**/*.json",
    "src/config/SignTask.ts" // 
    ,
    "src/config/CardMarket.ts"
  ],
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "exclude": [
    "node_modules", //
    "dist" // 
  ]
}